<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/dark_red"/>
                    <!-- alttan gölge -->
                    <corners android:radius="16dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item
                android:bottom="8px"
                >
                <shape>
                    <solid android:color="@color/red_main" />
                    <corners
                        android:radius="16dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/red_main"/>
                    <corners android:radius="20dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="8px">
                <shape>
                    <solid android:color="@color/red_main" />
                    <corners
                        android:radius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>