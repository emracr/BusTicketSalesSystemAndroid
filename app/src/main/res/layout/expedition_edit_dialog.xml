<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_travel_hour_dialog_edit_expedition"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/layout_location_to_activity_add_expedition"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/clock_3" />

                <Spinner
                    android:id="@+id/spnTravelHourEditExpeditionDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pbTravelTo"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/spinner_design"
                    android:minHeight="48dp"
                    android:textSize="14dp"
                    android:paddingLeft="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/clock_3" />

                <Spinner
                    android:id="@+id/spnTravelMinuteEditExpeditionDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pbTravelTo"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/spinner_design"
                    android:minHeight="48dp"
                    android:textSize="14dp"
                    android:paddingLeft="8dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_travel_price_dialog_edit_expedition"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pbPrice"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/price" />

            <EditText
                android:id="@+id/tbTravelPriceDialogEditExpedition"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pbPrice"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="20dp"
                android:hint="Fiyat"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:background="@drawable/text_box_design"
                android:paddingLeft="15dp"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnUpdateDialogEditExpedition"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:background="@drawable/button_design"
        android:text="Güncelle"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnCancelDialogEditExpedition"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btnUpdateDialogEditExpedition"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_design"
        android:gravity="center"
        android:text="İptal"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp" />


</RelativeLayout>