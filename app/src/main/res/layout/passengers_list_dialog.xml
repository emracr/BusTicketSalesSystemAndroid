<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/lblPassengersCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text=""
        android:textAlignment="center" />

    <ScrollView
        android:id="@+id/passengersListLayoutScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lblPassengersCount"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/passengersLayoutActivityPassengersDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:paddingBottom="60dp" />

    </ScrollView>

    <Button
        android:id="@+id/btnOkayPassengersListDialog"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_below="@+id/passengersListLayoutScroll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-60dp"
        android:background="@drawable/button_design"
        android:gravity="center"
        android:text="Tamam"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp" />

</RelativeLayout>