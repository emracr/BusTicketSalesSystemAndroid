<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/company" />

            <EditText
                android:id="@+id/tbCompanyNameCompanyUpdateAdmin"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pbTravelHour"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:hint="Firma adı"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:background="@drawable/text_box_design"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/id_card" />

            <EditText
                android:id="@+id/tbUserNameCompanyUpdateAdmin"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pbPrice"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:hint="Kullanıcı adı"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:background="@drawable/text_box_design"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnUpdateDialogUpdateCompanyAdmin"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:background="@drawable/button_design"
        android:text="Güncelle"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnCancelDialogUpdateCompanyAdmin"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btnUpdateDialogUpdateCompanyAdmin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_design"
        android:gravity="center"
        android:text="İptal"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp" />


</RelativeLayout>