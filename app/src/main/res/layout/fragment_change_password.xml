<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordFragment">

    <LinearLayout
        android:id="@+id/layout_top_fragment_change_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/red_main"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblChangePassword"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/noto_sans_bold"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Parola Değiştirme"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/layout_top_fragment_change_password"
        android:orientation="vertical">

        <EditText
            android:id="@+id/tbOldPasswordFragmentChangePassword"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:autofillHints=""
            android:background="@drawable/text_box_design"
            android:ems="10"
            android:hint="Mevcut parola"
            android:inputType="textPassword"
            android:maxLength="20"
            android:minHeight="48dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/tbNewPasswordFragmentChangePassword"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:autofillHints=""
            android:background="@drawable/text_box_design"
            android:ems="10"
            android:hint="Yeni parola"
            android:inputType="textPassword"
            android:maxLength="20"
            android:minHeight="48dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/tbNewPasswordConfirmFragmentChangePassword"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:autofillHints=""
            android:background="@drawable/text_box_design"
            android:ems="10"
            android:hint="Yeni parola tekrar"
            android:inputType="textPassword"
            android:maxLength="20"
            android:minHeight="48dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnUpdateFragmentChangePassword"
            android:layout_width="325dp"
            android:layout_height="50dp"
            android:layout_below="@+id/layout_gender"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/login_button_design"
            android:text="Güncelle"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>

</RelativeLayout>