<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindTicketFragment">

    <LinearLayout
        android:id="@+id/layout_top_fragment_find_ticket"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/red_main"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblTravelFeatures"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/noto_sans_bold"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Yolculuk Bilgileri"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_location_from_fragment_find_ticket"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/layout_top_fragment_find_ticket"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pbTravelFrom"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/location_from" />

        <Spinner
            android:id="@+id/spnTravelFromFindTicketFragment"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pbTravelFrom"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_design"
            android:minHeight="48dp"
            android:textSize="14dp"
            android:paddingLeft="8dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_location_to_fragment_find_ticket"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/layout_location_from_fragment_find_ticket"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pbTravelTo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/location_to" />

        <Spinner
            android:id="@+id/spnTravelToFindTicketFragment"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pbTravelTo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_design"
            android:minHeight="48dp"
            android:textSize="14dp"
            android:paddingLeft="8dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_travel_date_fragment_find_ticket"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/layout_location_to_fragment_find_ticket"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pbTravelDate"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/calendar" />

        <EditText
            android:id="@+id/tbTravelDateFragmentFindTicket"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pbTravelDate"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Seyahat Tarihi"
            android:inputType="phone"
            android:minHeight="48dp"
            android:textColorHint="@color/black"
            android:background="@drawable/text_box_design"
            android:paddingLeft="15dp"
            android:textSize="16dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnGetTravels"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:layout_below="@+id/layout_travel_date_fragment_find_ticket"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_button_design"
        android:text="@string/get_travels"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/pbSwapFragmentFindTicket"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_below="@+id/layout_location_from_fragment_find_ticket"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/swap" />


</RelativeLayout>