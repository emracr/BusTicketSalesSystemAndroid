<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketSummaryFragment">

    <LinearLayout
        android:id="@+id/layout_top_activity_company_ticket_summary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/red_main"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblTicketSummary"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/noto_sans_bold"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Bilet Ã–zeti"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_ticket_summary_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top_activity_company_ticket_summary"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:background="@drawable/ticket_summary_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pbFromCityCompanyTicketSummary"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/location_from" />

            <TextView
                android:id="@+id/lblFromCityCompanyTicketSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/pbFromCityCompanyTicketSummary"
                android:fontFamily="@font/roboto_bold"
                android:text=""
                android:textColor="@color/black_light"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pbToCityCompanyTicketSummary"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/location_to" />

            <TextView
                android:id="@+id/lblToCityCompanyTicketSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/pbToCityCompanyTicketSummary"
                android:fontFamily="@font/roboto_bold"
                android:text=""
                android:textColor="@color/black_light"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pbTravelDateCompanyTicketSummary"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/lblTravelDateCompanyTicketSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/pbTravelDateCompanyTicketSummary"
                android:fontFamily="@font/roboto_bold"
                android:text=""
                android:textColor="@color/black_light"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/pbTravelHourCompanyTicketSummary"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/clock_3" />

            <TextView
                android:id="@+id/lblTravelHourCompanyTicketSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/pbTravelHourCompanyTicketSummary"
                android:fontFamily="@font/roboto_bold"
                android:text=""
                android:textColor="@color/black_light"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/pbSeatCompanyTicketSummary"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/seat" />

            <TextView
                android:id="@+id/lblSeatCompanyTicketSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/pbSeatCompanyTicketSummary"
                android:fontFamily="@font/roboto_bold"
                android:text=""
                android:textColor="@color/black_light"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/pbGenderCompanyTicketSummary"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/gender_2" />

            <TextView
                android:id="@+id/lblGenderCompanyTicketSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/pbGenderCompanyTicketSummary"
                android:fontFamily="@font/roboto_bold"
                android:text=""
                android:textColor="@color/black_light"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/pbPriceCompanyTicketSummary"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/price" />

            <TextView
                android:id="@+id/lblPriceCompanyTicketSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="25dp"
                android:layout_toEndOf="@+id/pbPriceCompanyTicketSummary"
                android:fontFamily="@font/roboto_bold"
                android:text=""
                android:textColor="@color/black_light"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnCompleteReservation"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:layout_below="@+id/layout_ticket_summary_company"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_button_design"
        android:text="Rezervasyonu tamamla"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="15dp" />


</RelativeLayout>