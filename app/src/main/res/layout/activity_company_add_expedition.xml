<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyAddExpeditionActivity">

    <LinearLayout
        android:id="@+id/layout_top_activity_company_add_expedition"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/red_main"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblAddNewExpedition"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/noto_sans_bold"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Yeni Sefre Ekle"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_location_from_activity_add_expedition"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/layout_top_activity_company_add_expedition"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pbTravelFrom"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/location_from" />

        <Spinner
            android:id="@+id/spnTravelFromAddExpeditionActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pbTravelFrom"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_design"
            android:minHeight="48dp"
            android:textSize="14dp"
            android:paddingLeft="8dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_location_to_activity_add_expedition"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/layout_location_from_activity_add_expedition"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pbTravelTo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/location_to" />

        <Spinner
            android:id="@+id/spnTravelToAddExpeditionActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pbTravelTo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_design"
            android:minHeight="48dp"
            android:textSize="14dp"
            android:paddingLeft="8dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_travel_hour_activity_add_expedition"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/layout_location_to_activity_add_expedition"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/clock_3" />

            <Spinner
                android:id="@+id/spnTravelHourAddExpeditionActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pbTravelTo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_design"
                android:minHeight="48dp"
                android:textSize="14dp"
                android:paddingLeft="8dp"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/clock_3" />

            <Spinner
                android:id="@+id/spnTravelMinuteAddExpeditionActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pbTravelTo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_design"
                android:minHeight="48dp"
                android:textSize="14dp"
                android:paddingLeft="8dp"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_travel_price_activity_add_expedition"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/layout_travel_hour_activity_add_expedition"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pbPrice"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/price" />

        <EditText
            android:id="@+id/tbTravelPriceAddExpeditionActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pbPrice"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:hint="Fiyat"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:background="@drawable/text_box_design"
            android:paddingLeft="15dp"
            android:textSize="16dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnAddExpedition"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:layout_below="@+id/layout_travel_price_activity_add_expedition"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_design"
        android:text="Seferi ekle"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp" />

</RelativeLayout>